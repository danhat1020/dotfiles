/* Rofi theme - Clean black/purple */
/* Save as ~/.config/rofi/themes/clean-purple.rasi */

* {
    bg-color: #dcdcdc;
    text-color: #202020;
    accent: #e8e8e8;
    urgent: #ff6b6b;
    selected: #4070d0;
    
    font: "Chicago FLF 14";
    background-color: transparent;
    text-color: #202020;
}

window {
    background-color: @bg-color;
    border: 2px;
    border-color: rgba(32, 32, 32, 1.0);
    width: 600px;
    padding: 10px;
}

mainbox {
    children: [ inputbar, listview ];
    spacing: 10px;
}

inputbar {
    children: [ entry ];
    spacing: 10px;
    padding: 0 10px;
}

prompt {
    text-color: @accent;
}

entry {
    placeholder: "Search applications...";
    placeholder-color: #a0a0a0;
    cursor: text;
}

listview {
    lines: 8;
    columns: 1;
    fixed-height: false;
    spacing: 0px;
    scrollbar: false;
    cycle: true;
}

element {
    padding: 10px 15px;
    border-radius: 0;
}

element normal.normal {
    background-color: transparent;
}

element normal.urgent {
    text-color: @urgent;
}

element normal.active {
    text-color: @accent;
}

element selected.normal {
    background-color: @selected;
    text-color: @accent;
}

element selected.urgent {
    background-color: @selected;
    text-color: @urgent;
}

element selected.active {
    background-color: @selected;
    text-color: @accent;
}

element-text {
    background-color: transparent;
    text-color: inherit;
    highlight: @accent;
}

element-icon {
    background-color: transparent;
    size: 24px;
    padding: 0px 8px 0px 0px;
}
